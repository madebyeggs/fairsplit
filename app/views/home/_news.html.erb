<div class="rightHandSection">
	<div class="sectionHeader">
		<div class="title">Fairsplit Music</div>
	</div>
	<!--<hr class="afterTitle"/>-->
	
	<div class="canScroll">
		<% @announcements.each do |a| %>
			<div class="project">
				<div class="sectionSubHeader">
					<table>
						<tr>
							<td width="94%">
								<div class="subTitle"><%= a.title %></div>
							</td>	
							<td width="5%">
								<img class="socialPic" src="../assets/twitter.png" alt="Twitter">
							</td>
							<td width="5%">
								<img class="socialPic" src="../assets/facebook.png" alt="Facebook">
							</td>
						</tr>
					</table>
				</div>
				<hr class="afterSubtitle" />
				<div class="mainContent">
					<div class="newsStory">
						<% if a.video? %>
							<div class="element">
								<div class="images2"><%= image_tag(a.image) %>
			    					<section class="hidden-infos"> 
										<a href="https://player.vimeo.com/video/<%= a.video %>?badge=0&amp;title=0&amp;byline=0&amp;portrait=0&amp;color=ffffff" class="video-popup" title="">
										</a>
										<div class="icons3 video"></div>  					
									</section>
			    				</div>
							</div>
						<% else %>
							<div class="newsStoryImage"><%= image_tag(a.image) %></div>
						<% end %>
				
						<div class="shrinkable">
							<span><%= simple_format a.description %></span><br/>
							<% if a.soundcloud? %>
								<div class="soundcloud">
									<iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/<%= a.soundcloud %>&amp;color=bdbdbd&amp;background_color=000000&amp;auto_play=false&amp;hide_related=true&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false&amp;show_artwork=false"></iframe>
								</div><br/>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		<% end %>
		<div id="backtotop">
		  <ul>
		    <li><a id="toTop" class="bounce" href="#" onClick="return false">Back to Top</a></li>
		  </ul>
		</div>
		<br class="clear" />
	</div>
</div>