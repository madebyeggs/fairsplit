<div class="rightHandSection2">
	<div class="canScroll4">
		<% @artists.each do |a| %>
			<div class="element">
				<div class="images" id="artistPicture<%= a.id %>">
					<div class="artist<%= a.id %>" id="scrollHereArtist<%= a.id %>">
						<%= image_tag(a.image) %>
					</div>
					<div class="muteEffects">
		    			<section class="hidden-infos">
							<input type="hidden" value=<%= a.id %> class="artist-object-id"> 
							<a class="launchArtist"></a>
			          		<div class="overlay3"></div>
							<div class="icons4 play"></div>	        					
						</section>
			        	<div class="vidTitle">
			        		<div class="title-wrap">
			            		<h3><%= a.name %></h3>
			          		</div>
							<div class="subtitle-wrap">
		            			<p><%= truncate(a.description, :length => 80) %></p>
							</div>
			        	</div>
					</div>
		    	</div>
			</div>
			<div id="artist<%= a.id %>" style="display:none;">
				<div class="projectInfo">
					<input type="hidden" value=<%= a.id %> class="artist-object-id">
					<a class="artistCloseIcon"></a>
					<h1 class="projectName"><%= a.name %></h1>
					<hr class="projectSeparator" />
					<div class="artist-left">
						<p class="projectDetail"><%= simple_format a.description, :class => "projectDetail" %></p>
					</div>
					<div class="artist-right">
						<% if a.works.count > 0 %>
							<div class="artistVideoContainer">
								<% a.works.each do |aw| %>
									<div class="fitvids">
										<iframe src="//player.vimeo.com/video/<%= aw.url %>?title=0&amp;byline=0&amp;portrait=0" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
									</div>
									<div class="videoTitling">
										<%= aw.client %> &nbsp; | &nbsp; <i><%= aw.title %></i>
									</div>
									<hr class="projectSeparator" />
								<% end %>
							</div>
						<% elsif a.small_image %>
							<div class="artistSquareContainer">
								<div class="squareImage">
									<%= image_tag(a.small_image, :class => "squareImage") %>
								</div>
							</div>
						<% end %>
					</div>
					<div class="artist-bottom">
						<% if a.soundcloud? %>
							<iframe width="100%" height="281" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/<%= a.soundcloud %>&amp;color=bdbdbd&amp;background_color=000000&amp;auto_play=false&amp;hide_related=true&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false&amp;show_artwork=false">
							</iframe>
						<% end %>
					</div>
				</div>
			</div>
		<% end %>
