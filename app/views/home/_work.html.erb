<div class="rightHandSection2">
	<div class="canScroll2">
		<% @works.each do |w| %>
			<div class="element">
				<div class="images">
					<div class="work<%= w.id %>">
						<% if w.latest?  %>
							<%= image_tag(w.large_image) %>
						<% else %>
							<%= image_tag(w.image) %>
						<% end %>
					</div>
					<div class="muteEffects">
		    			<section class="hidden-infos">
							<input type="hidden" value=<%= w.id %> class="work-object-id"> 
							<a class="launchWork"></a>
			          		<div class="overlay3"></div>
							<div class="icons4 play"></div>	        					
						</section>
			        	<div class="vidTitle">
			        		<div class="title-wrap">
			            		<h3><%= w.client %> <i>"<%= w.title %>"</i></h3>
			          		</div>
							<div class="subtitle-wrap">
		            			<p><%= w.artist_name %>: <%= w.track_name %></p>
							</div>
			        	</div>
					</div>
		    	</div>
			</div>
			<div id="work<%= w.id %>" style="display:none;">
				<div class="projectInfo" id="scrollHereWork<%= w.id %>">
					<input type="hidden" value=<%= w.id %> class="work-object-id">
					<a class="workCloseIcon"></a>
					<h1 class="projectName"><%= w.client %> "<%= w.title %>"</h1>
					<h3 class="projectSubtitle"><%= w.type_of_work %></h3>
					<h3 class="projectSubtitle"><em>MUSIC - </em><%= w.artist_name %>: <%= w.track_name %></h3>
					<hr class="projectSeparator" />
					<div class="fitvids">
						<% if w.url? %>
			        	<iframe src="//player.vimeo.com/video/<%= w.url %>?title=0&amp;byline=0&amp;portrait=0" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
						<% end %>
					</div>
					<% if w.url? %><hr class="projectSeparator" /><% end %>
					<p class="projectDetail"><%= simple_format w.description, :class => "projectDetail" %></p>
				</div>
			</div>
		<% end %>
