<div class="element">
	<div class="images">
		<div class="imageContainer">
			<%= image_tag announcement.image, alt: "#{announcement.homepage_title}" %>
		</div>

		<div class="muteEffects">
			<section class="hidden-infos">
				<a class="launchAnnouncement"><%= link_to '', news_path(announcement) %></a>
          		<div class="overlay3"></div>
				<div class="icons4 play"></div>	        					
			</section>
        	<div class="vidTitle">
				<div class="title-wrap">
            		<h3 class="descriptionSize1 upcase"><%= announcement.homepage_title %></h3>
          		</div>
				<div class="subtitle-wrap">
        			<p><%= truncate(announcement.description, :length => 80, :class => "descriptionSize1") %></p>
				</div>
				<div class="subtitle-wrap borderTop italics">
					<p><%= announcement.created_at.strftime("%B %Y") %></p>
				</div>
        	</div>
		</div>
	</div>
</div>

