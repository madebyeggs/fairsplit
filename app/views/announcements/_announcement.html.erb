<div class="projectInfo">
<div class="project">
	<div class="sectionSubHeader">
		<table>
			<tr>
				<td width="94%">
					<div class="subTitle"><%= announcement.title %></div>
				</td>
				<td width="3%">
					<div class="socials"><i class="fa fa-twitter fa-lg"></i></div>
				</td>
				<td width="3%">
					<div class="socials"><i class="fa fa-facebook fa-lg"></i></div>
				</td>
			</tr>
		</table>		
	</div>
	<hr class="afterSubtitle" />
	<div class="mainContent">
		<div class="newsStory">
			<% if announcement.video? %>
				<div class="element">
					<div class="images2"><%= image_tag(announcement.image) %>
    					<section class="hidden-infos"> 
							<a href="https://player.vimeo.com/video/<%= announcement.video %>?badge=0&amp;title=0&amp;byline=0&amp;portrait=0&amp;color=ffffff" class="video-popup" title="">
							</a>
							<div class="icons3 video"></div>  					
						</section>
    				</div>
				</div>
			<% else %>
				<div class="newsStoryImage"><%= image_tag(announcement.image) %></div>
			<% end %>

			<div class="shrinkable">
				<span><%= simple_format announcement.description %></span><br/>
				<% if announcement.soundcloud? %>
					<div class="soundcloud">
						<iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/<%= announcement.soundcloud %>&amp;color=bdbdbd&amp;background_color=000000&amp;auto_play=false&amp;hide_related=true&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false&amp;show_artwork=false"></iframe>
					</div><br/>
				<% end %>
			</div>
		</div>
	</div>
</div>
</div>