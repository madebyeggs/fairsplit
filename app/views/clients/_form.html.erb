<div class="col-md-12">
	<div class="logo2"><%= link_to(image_tag('logo.png'), cms_path) %></div>
</div>

<div class="col-md-12">
	<div class="col-md-8 col-sm-offset-2 topper">

		<h1 class="formHeader">Add/edit your clients's content below</h1>
		<hr class="projectSeparator" />
	
		<div class="formWrapper">	
			<%= form_for @client, html: { multipart: true } do |f| %>
				<div class="col-md-3">&nbsp;</div>
				<div class="col-md-6">
					<%= f.label :name, class: "formLabel" %>
	    			<%= f.text_field :name, class: 'formField' %>
					<%= f.label :client_website, class: "formLabel" %>
	    			<%= f.text_field :url, class: 'formField' %>
					<%= f.label :image_crop_to_300X300_before_uploading, class: "formLabel" %><br />
					<%= f.file_field :image %>
					<% if @client.image.exists? %>
						<p class="existingImageName">{ Current Image: "<%= @client.image_file_name %>" }</p><br/>
					<% else %>
						<br/>
					<% end %>
		    		<% if @user.email != @testing %>
						<%= f.submit class: "btn", data: {disable_with: "Submitting..."} %>
					<% end %>
				</div>
				<div class="col-md-3">&nbsp;</div>
			<% end %>
		</div>
	
	</div>
</div>