<div class="element">
	<div class="images">
		<div class="imageContainer">
			<% if sound_counter == 0 %>
				<%= image_tag sound.large_image, alt: "#{sound.title}" %>
			<% else %>
				<%= image_tag sound.image, alt: "#{sound.title}" %>
			<% end %>
		</div>

		<div class="muteEffects">
			<section class="hidden-infos">
				<a class="launchAnnouncement"><%= link_to '', sound_path(sound) %></a>
          		<div class="overlay3"></div>
				<div class="icons4 play"></div>	        					
			</section>
        	<div class="vidTitle">
				<div class="title-wrap">
            		<h3>NEW PLAYLIST: <%= sound.title %></h3>
          		</div>
				<div class="subtitle-wrap">
           			<p><%= truncate(sound.description, :length => 80) %></p>
				</div>
				<div class="subtitle-wrap borderTop">
   					<p><%= sound.created_at.strftime("%B %Y") %></p>
				</div>
        	</div>
		</div>
	</div>
</div>
