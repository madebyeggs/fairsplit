<div class="cmsWrapper">
	<div class="releases">
		<div class="divHeader">Works</div>
		<div class="tableWrapper">
			<div class="tableContent">
				<% if @works.count > 0 %>
					<table width="100%">
						<tr class="tableHeader">
							<th>TITLE</th>
							<th>CLIENT</th>
							<th>INFO</th>
							<th>VIDEO URL</th>
							<th>LATEST</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @works.each do |w| %>
							<tr class="tableRow">
								<td width="15%"><%= w.title %></td>
								<td width="15%"><%= w.client %></td>
								<td width="45%"><%= truncate(w.description, :length => 60) %></td>
								<td width="19%"><%= w.url %></td>
								<td width="19%"><%= w.latest %></td>
								<td width="3%"><%= link_to image_tag('edit2.png'), edit_work_path(w) %></td>
								<td width="3%"><%= link_to image_tag('delete2.png'), w, :confirm => 'Are you sure you want to delete this work?', :method => :delete %></td>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%">
						<tr class="tableRow empty">
							<td>
								<em>YOU HAVE NO WORKS YET... ADD SOME BELOW ?!</em>
							</td>
						</tr>
					</table>
				<% end %>
			</div>
		</div>
	</div>
	<h6>
	<input type="hidden" value="works" class="modal-model-type">
	<h6><%= link_to 'Add new work', new_work_path, :class => "darkButton2" %></h6>
</div>