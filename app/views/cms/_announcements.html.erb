<div class="cmsWrapper">
	<div class="releases">
		<div class="divHeader">News items</div>
		<div class="tableWrapper">
			<div class="tableContent">
				<% if @announcements.count > 0 %>
					<table width="100%">
						<tr class="tableHeader">
							<th>TITLE</th>
							<th>DESCRIPTION</th>
							<th>VIMEO</th>
							<th>S'CLOUD</th>
							<th>FB IMAGE</th>
							<th>POSTING URL</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @announcements.each do |a| %>
							<tr class="tableRow">
								<td width="16%"><%= truncate(a.homepage_title, :length => 15) %></td>
								<td width="31%"><%= truncate(a.description, :length => 30) %></td>
								<td width="9%"><%= a.vimeo %></td>
								<td width="11%"><%= a.soundcloud %></td>
								<% if a.facebook_image == '' || a.facebook_image.blank? %>
									<td width="10%" class="topperButtons">NO</td>
								<% else %>
									<td width="10%" class="topperButtons">YES</td>
								<% end %>
								<td width="20%">
									<a href="../announcements/<%= a.slug %>" target="_blank">
										<%= a.short_id_url rescue nil %>	
									</a>
								</td>
								<% if a.short_id_url == '' || a.short_id_url.blank? %>
									<td width="1%" class="topperButtons">
										<%= link_to 'L', get_announcement_links_path(:id => a.id), :title => "Generate sharing link for the announcement #{a.homepage_title}", :class => "btn btn2 tips" %>
									</td>
								<% else %>
									<td width="1%" class="topperButtons"></td>
								<% end %>
								<td width="1%" class="topperButtons"><%= link_to "E", edit_announcement_path(a), :title => "Edit announcement", :class => "btn btn2 tips" %></td>
								<% if @user.email != @testing %>
									<td width="1%" class="topperButtons"><%= button_to "X", a, :method => :delete, :class => "btn btn3 delete_post", :remote => true %></td>
								<% end %>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%">
						<tr class="tableRow empty">
							<td>
								<em>YOU HAVE NO NEWS ITEMS YET... ADD SOME BELOW ?!</em>
							</td>
						</tr>
					</table>
				<% end %>
			</div>
		</div>
	</div>
	<h6>
	<input type="hidden" value="works" class="modal-model-type">
	<h6><%= link_to 'Add news item', new_announcement_path, :class => "darkButton2" %></h6>
</div>