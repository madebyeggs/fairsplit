<div class="cmsWrapper">
	<div class="releases">
		<div class="divHeader">Playlists</div>
		<div class="tableWrapper">
			<div class="tableContent">
				<% if @sounds.count > 0 %>
					<table width="100%">
						<tr class="tableHeader">
							<th>TITLE</th>
							<th>INFO</th>
							<th>S'CLOUD</th>
							<th>LATEST</th>
							<th>HOME</th>
							<th>FB IMAGE</th>
							<th>POSTING URL</th>
						</tr>
						<tr><hr class="ruler"/></tr>
						<% @sounds.each do |s| %>
							<tr class="tableRow">
								<td width="24%"><%= truncate(s.title, :length => 20) %></td>
								<% if s.description.blank? || s.description == '' %>
									<td width="10%">NO</td>
								<% else %>
									<td width="10%">YES</td>
								<% end %>
								<td width="12%"><%= s.soundcloud %></td>
								<td width="7%"><%= s.latest %></td>
								<td width="7%"><% if s.homepage == true %><%= "true" %><% else %><%= "false" %><% end %></td>
								<% if a.facebook_image == '' || a.facebook_image.blank? %>
									<td width="10%" class="topperButtons">NO</td>
								<% else %>
									<td width="10%" class="topperButtons">YES</td>
								<% end %>
								<td width="20%">
									<a href="../sounds/<%= s.slug %>" target="_blank">
										<%= s.short_id_url rescue nil %>	
									</a>
								</td>
								<% if s.short_id_url == '' || s.short_id_url.blank? %>
									<td width="1%" class="topperButtons">
										<%= link_to 'L', get_sound_links_path(:id => s.id), :title => "Generate sharing link for #{s.title} playlist", :class => "btn btn2 tips" %>
									</td>
								<% else %>
									<td width="1%" class="topperButtons"></td>
								<% end %>
								<td width="1%" class="topperButtons"><%= link_to "E", edit_sound_path(s), :title => "Edit #{s.title} playlist", :class => "btn btn2 tips" %></td>
								<% if @user.email != @testing %>
									<td width="1%" class="topperButtons"><%= button_to "X", s, :method => :delete, :class => "btn btn3 delete_post", :remote => true %></td>
								<% end %>
							</tr>
						<% end %>
					</table>
				<% else %>
					<table width="100%">
						<tr class="tableRow empty">
							<td>
								<em>YOU HAVE NO PLAYLISTS YET... ADD SOME BELOW ?!</em>
							</td>
						</tr>
					</table>
				<% end %>
			</div>
		</div>
	</div>
	<h6>
	<input type="hidden" value="works" class="modal-model-type">
	<h6><%= link_to 'Add new playlist', new_sound_path, :class => "darkButton2" %></h6>
</div>