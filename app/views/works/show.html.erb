<div class="canScroll4">
	<div class="projectInfo">
		<%= link_to '', :back, :class => "artistCloseIcon" %>
		<h1 class="projectName"><%= @work.client %> "<%= @work.title %>"</h1>
		<h3 class="projectSubtitle fixerSpace"><%= @work.type_of_work %></h3>
		<h3 class="projectSubtitle spacer"><em>MUSIC - </em><%= @work.artist_name %>: <%= @work.track_name %></h3>
		<div class="links">
			<input id="twitter" type="hidden" 
				data-url="<%= @currentUrl %>"
				data-description="<%= truncate(@work.description, :length => 90) %>" 
				data-via="fairsplitmusic" 
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'twitter' }, :class => 'prettySocial fa fa-twitter socialLinks' %>
			<input id="facebook" type="hidden"
			 	data-type="video.other"
				data-url="<%= @currentUrl %>"
				data-title="<%= @work.client %> +  ' ' + <%= @work.title %>"
				data-description="Fairsplit Music recently worked with <%= @work.client %> on thier new project <%= @work.title %>. Have a look at the results!" 
				data-image="<%= @work.large_image %>" 
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'facebook' }, :class => 'prettySocial fa fa-facebook socialLinks' %>
			<input id="googleplus" type="hidden" 
				data-url="<%= @currentUrl %>"
				data-description="<%= truncate(@work.description, :length => 90) %>" 
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'googleplus' }, :class => 'prettySocial fa fa-google-plus socialLinks' %>
			<input id="pinterest" type="hidden" 
				data-url="<%= @currentUrl %>" 
				data-description="<%= truncate(@work.description, :length => 90) %>" 
				data-media="http://sonnyt.com/assets/imgs/prettySocial.png" 
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'pinterest' }, :class => 'prettySocial fa fa-pinterest socialLinks' %>
			<input id="linkedin" type="hidden" 
				data-url="<%= @currentUrl %>" 
				data-title="Fairsplit Music project" 
				data-description="<%= truncate(@work.description, :length => 90) %>" 
				data-via="fairsplitmusic" 
				data-media="http://sonnyt.com/assets/imgs/prettySocial.png" 
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'linkedin' }, :class => 'prettySocial fa fa-linkedin socialLinks' %>
		</div>
		<hr class="projectSeparator" />
		<div class="fitvids">
			<% if @work.vimeo? %>
			<div id="videoLoaderWork">
				<span class="centerer2"></span>
				<%= image_tag 'status2.gif', :id => "loadingImage2" %>
			</div>
        	<iframe id="videoPlayer" src="https://player.vimeo.com/video/<%= @work.vimeo %>?title=0&amp;byline=0&amp;" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
			<% end %>
		</div>
		<% if @work.vimeo? %><hr class="projectSeparator" /><% end %>
		<% if @work.description? %><p class="projectDetail"><%= simple_format @work.description, :class => "projectDetail" %></p><% end %>
	</div>
</div>