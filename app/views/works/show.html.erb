<div class="canScroll4">
	<div class="projectInfo">
		<% if request.referer == "http://localhost:3000/announcements" %>
			<%= link_to '', announcements_path, :class => "artistCloseIcon" %>
		<% elsif request.referer == "http://www.fairsplitmusic.com/announcements" %>
			<%= link_to '', announcements_path, :class => "artistCloseIcon" %>
		<% else %>
			<%= link_to '', works_path, :class => "artistCloseIcon" %>
		<% end %>
		<h1 class="projectName titleSize1"><%= @work.client %> "<%= @work.title %>"</h1>
		<h3 class="projectSubtitle fixerSpace descriptionSize1 upcase"><%= @work.type_of_work %></h3>
		<h3 class="projectSubtitle spacer descriptionSize1 upcase italics"><em>MUSIC - </em><%= @work.artist_name %>: <%= @work.track_name %></h3>
		<div class="links">
			<input id="twitter" type="hidden" 
				data-url="<%= @currentUrl %>"
				data-image="<%= @work.facebook_image %>"
				data-description="Great sync!" 
				data-via="fairsplitmusic" 
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'twitter' }, :class => 'prettySocial fa fa-twitter socialLinks' %>
			<input id="facebook" type="hidden" 			
				value"https://www.facebook.com/dialog/share?app_id=1723612194533881&amp;display=popup&amp;href=https%3A%2F%2Fvimeo.com%2F<%= @work.vimeo %>%3Fref%3Dfb-share&amp;redirect_uri=http://www.fairsplitmusic.com/works">
			<a href="javascript:void(0)" data-service="facebook" data-action="post" class="fa fa-facebook socialLinks"></a>
			<input id="googleplus" type="hidden" 
				data-url="<%= @currentUrl %>"
				data-media="<%= @work.facebook_image %>"
				data-description="Fairsplit Music recently worked with <%= @work.client %> on thier new project <%= @work.title %>. Have a look at the results!"
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'googleplus' }, :class => 'prettySocial fa fa-google-plus socialLinks' %>
			<input id="pinterest" type="hidden" 
				data-url="<%= @currentUrl %>" 
				data-description="Fairsplit Music recently worked with <%= @work.client %> on thier new project <%= @work.title %>. Have a look at the results!"
				data-media="<%= @work.facebook_image %>" 
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'pinterest' }, :class => 'prettySocial fa fa-pinterest socialLinks' %>
			<input id="linkedin" type="hidden" 
				data-url="<%= @currentUrl %>" 
				data-title="Fairsplit Music project" 
				data-description="Fairsplit Music recently worked with <%= @work.client %> on thier new project <%= @work.title %>. Have a look at the results!"
				data-via="fairsplitmusic" 
				data-media="<%= @work.facebook_image %>" 
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'linkedin' }, :class => 'prettySocial fa fa-linkedin socialLinks' %>
		</div>
		<hr class="projectSeparator" />
		<div class="fitvids">
			<% if @work.vimeo? %>
			<div id="videoLoaderWork">
				<span class="centerer2"></span>
				<%= image_tag 'status2.gif', :id => "loadingImage2" %>
			</div>
        	<iframe id="videoPlayer" src="https://player.vimeo.com/video/<%= @work.vimeo %>?title=0&amp;byline=0&amp;" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
			<% end %>
		</div>
		<% if @work.vimeo? %><hr class="projectSeparator" /><% end %>
		<% if @work.description? %><p class="projectDetail"><%= simple_format @work.description, :class => "projectDetail descriptionSize1" %></p><% end %>
	</div>
</div>